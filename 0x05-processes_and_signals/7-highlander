#!/usr/bin/env bash
# File: 7-highlander
# Description: An infinite loop script that handles SIGTERM by printing a message.

# Use trap to catch SIGTERM (signal 15) and execute a command instead of terminating.
# The command is: echo "I am invincible!!!"
# Note: The trap command uses the signal number (15) or the signal name (SIGTERM).
trap 'echo "I am invincible!!!"' SIGTERM

# Start the infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
